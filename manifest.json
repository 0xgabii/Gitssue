{
  "name": "Gitssue",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Manage your github issue",

  "browser_action": {
    "default_popup": "./popup/render.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["./content/main.js"],
      "css": ["./content/style.css"]
    }
  ], 

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}