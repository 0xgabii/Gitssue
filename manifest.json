{
  "name": "Gitssue",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Manage your github issue",

  "browser_action": {
    "default_popup": "./popup/index.html"
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./content/dist/static/js/manifest.js",
        "./content/dist/static/js/vendor.js",
        "./content/dist/static/js/app.js"      
      ],
      "css": [
        "./content/dist/static/css/app.css"
      ]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "web_accessible_resources": [
    "./content/dist/static/css/app.css"
  ],

  "content_security_policy": "font-src assets-cdn.github.com",
  
  "permissions": [
    "<all_urls>",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ]
}